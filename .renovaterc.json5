{
  $schema: "https://docs.renovatebot.com/renovate-schema.json",
  extends: [
    "config:recommended",
    ":dependencyDashboard",
    "github>Subbeh/home-ops//.renovate/customManagers.json5",
  ],
  enabledManagers: ["flux", "kubernetes", "helm-values", "github-actions"],
  flux: {
    fileMatch: ["\\.yaml$", "\\.yaml\\.j2$"],
  },
  kubernetes: {
    fileMatch: ["\\.yaml$", "\\.yaml\\.j2$"],
  },
  "helm-values": {
    fileMatch: ["\\.yaml$", "\\.yaml\\.j2$"],
  },
  ignorePaths: [
    "**/*.sops.*",
    "**/resources/**",
    "ansible/**",
    "!ansible/requirements.yml",
    "!ansible/services/*.yaml",
  ],
}
