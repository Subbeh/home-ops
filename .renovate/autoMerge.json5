{
  $schema: "https://docs.renovatebot.com/renovate-schema.json",
  packageRules: [
    {
      description: "Auto merge default apps",
      matchPaths: ["kubernetes/apps/default/**"],
      automerge: true,
      automergeType: "pr",
      matchUpdateTypes: ["minor", "patch", "digest"],
      excludePackageNames: [
        "/plex/",
        "/jellyfin/",
        "/home-assistant/",
      ],
      ignoreTests: true,
    },
    {
      description: "Auto merge misc apps",
      matchDatasources: ["docker"],
      automerge: true,
      automergeType: "pr",
      matchUpdateTypes: ["minor", "patch", "digest"],
      matchPackageNames: [
        "/kube-prometheus-stack/",
      ],
      ignoreTests: false,
    },
    {
      description: "Auto merge GitHub Actions",
      matchManagers: ["github-actions"],
      automerge: true,
      automergeType: "pr",
      matchUpdateTypes: ["minor", "patch", "digest"],
      minimumReleaseAge: "3 days",
      ignoreTests: true,
    },
    {
      description: "Auto merge mise and pip dependencies",
      matchManagers: ["mise", "pip_requirements"],
      automerge: true,
      automergeType: "pr",
      matchUpdateTypes: ["minor", "patch", "digest"],
      ignoreTests: true,
    },
    {
      description: "Auto merge only on major updates",
      automerge: true,
      automergeType: "pr",
      matchUpdateTypes: ["major"],
      matchDatasources: ["npm"],
      matchPackageNames: [
        "renovate"
      ],
      ignoreTests: true,
    },
    {
      description: "Auto merge Terraform providers",
      matchManagers: ["terraform-provider"],
      automerge: true,
      automergeType: "pr",
      matchUpdateTypes: ["minor", "patch", "digest"],
      ignoreTests: true,
    }
  ],
}
